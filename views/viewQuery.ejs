<link rel="stylesheet" type="text/css" href="/css/bootstrap-iso.css">
<link rel="stylesheet" href="/css/common.css">

<style type="text/css">
	
	input {
		width: 400px !important;
	}

	.textarea {
		width: 850px !important;
		height: 50px !important;
	}

</style>

<div class="bootstrap-iso">
	<div class="container">

	<div class="row equal-height-row">
	  <div class="jumbotron background_color col-md-12" id="query_view_div">
			<h1>Resultados</h1>
	  </div>
	</div>

		<div class="row equal-height-row">
		  <div class="jumbotron background_color col-md-12" id="query_view_div">
		  	<form method="POST" action="/admin/edit">
		  		<input type="hidden" name="viewType" value="<%= type %>">
		  		<input type="hidden" name="id" value="<%= id %>">
			    <% for (var key in results) { %>
			    <div class="form-group">
			    	<label><%= key %>:</label>
			    	<% if (typeof(results[key]) === 'string' || typeof(results[key]) === 'number') { %>
							<input type="text" name="<%= key %>" value="<%= results[key] %>" class="form-control">
						<% } else { %>
							<input type="textarea" name="<%= key %>" value="<%= JSON.stringify(results[key], null, 2) %>" class="form-control textarea">
						<% } %>
			    </div>
			    <% } %>
			    <button type="submit" class="btn btn-default">Alterar</button>
		    </form>
		  </div>
		</div>

		<div class="row equal-height-row">
			<div class="jumbotron background_color col-md-12">
				<form method="GET" action="/admin">
					<button type="submit" class="btn btn-default">Voltar ao Menu</button>
				</form>
			</div>
		</div>
	</div>
</div>

<script src="/js/jquery-1.9.1.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script src="/js/underscore.js"></script>
<script src="/js/backbone.js"></script>